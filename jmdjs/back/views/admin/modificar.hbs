<div class="container" style="margin:100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar trabajo {{trabajo.id}}</h4>
            <form action="/admin/trabajos/modificar" method="post" enctype="multipart/form-data">
                <input type="hidden" value="{{trabajo.id}}" name="id">

                <div class="form-group">
                    <label for="">Empresa</label>
                    <input type="text" class="form-control" name="empresa" value="{{trabajo.empresa}}">
                </div>

                <div class="form-group">
                    <label for="">Trabajo</label>
                    <input type="text" class="form-control" name="trabajo" value="{{trabajo.trabajo}}">
                </div>

                <div class="mb-3 row">
                    <p>
                        <label>Imagen: <input type="file" class="form-group" name="imagen" id="imagen"></label>
                    </p>
                    <p>
                        <label><input type="checkbox" name="img_delete" id="img_delete" value="1"> Â¿Desea eliminar
                            imagen actual?
                        </label>
                        <input type="hidden" name="img_original" value="{{trabajo.img_id}}">
                    </p>
                </div>

                <div class="form-group">
                    <label for="">Cuerpo</label>
                    <textarea name="cuerpo" class="form-control">{{trabajo.cuerpo}}</textarea>
                </div>

                <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>