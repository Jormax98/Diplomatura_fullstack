<div class="container" style="margin-top:50px">
    <div class="row">
        <p class="text-end">Hola {{ usuario }} <a class="btn btn-danger" href="/admin/login/logout">Cerrar sesi√≥n <i
                    class="fas fa-sing-out-alt"></i></a></p>
    </div>
    <div>
        <div class="row">
            <div class="col-7">
                <h3>Listado de trabajos</h3>
            </div>
            <div class="col-5 text-end">
                <a class="btn btn-success" href="/admin/trabajos/agregar">
                    <i class="fa fa-plus" aria-hidden="true"></i>Nuevo
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <table class="table">
                    <thead>
                        <tr class="table-dark">
                            <th scope="col">#</th>
                            <th scope="col">Empresa</th>
                            <th scope="col">Trabajo</th>
                            <th scope="col">Imagen</th>
                            <th scope="col">Cuerpo</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each trabajos}}
                        <tr>
                            <th scope="row">{{id}}</th>
                            <td>{{empresa}}</td>
                            <td>{{trabajo}}</td>
                            <td>{{{imagen}}}</td>
                            <td>{{cuerpo}}</td>
                            <td class="text-end">
                                <a class="btn btn-secondary" href="/admin/trabajos/modificar/{{id}}"><i
                                        class="fa fa-pencil" aria-hidden="true"></i>Editar</a>
                                <a class="btn btn-secondary" href="/admin/trabajos/eliminar/{{id}}"><i
                                        class="fa fa-trash" aria-hidden="true"></i>Eliminar</a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>

            </div>

        </div>
    </div>
</div>